<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <NumberPicker 
        android:id="@+id/NumberPickerFrequenz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        />
    
    <Button 
        android:id="@+id/FrequenzCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NumberPickerFrequenz"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="98dp"
        android:layout_toRightOf="@+id/NumberPickerFrequenz"
        android:text="@string/stringcancel"
        />
    
    <Button 
        android:id="@+id/FrequenzOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/FrequenzCancel"
        android:layout_alignBottom="@+id/FrequenzCancel"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/NumberPickerFrequenz"
        android:text="@string/stringset"
        />

</RelativeLayout>
